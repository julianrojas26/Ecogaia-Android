<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_5"
    android:layout_marginTop="@dimen/margin_5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp">
        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="120dp"
            android:layout_margin="8dp"
            android:background="@drawable/shape_form2"
            android:orientation="horizontal"
            android:padding="1dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imagen_producto_favoritos"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:src="@drawable/hands" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombre_favoritos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="Nombre Producto" />

                <TextView
                    android:id="@+id/cantidad_favoritos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="Cantidad del producto" />

                <TextView
                    android:id="@+id/precio_favoritos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="$_______" />

            </LinearLayout>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@color/transparent"
                android:src="@drawable/favoritos" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>