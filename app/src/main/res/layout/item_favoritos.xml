<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- item -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/shape_carrito"
        android:layout_margin="14dp"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/imagen_producto_favoritos"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@drawable/jabon"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/nombre_produ_favoritos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nombre Producto"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/descripcion_favoritos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Descripcion del producto"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/precio_favoritos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="$_______"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/favoritos"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>

</FrameLayout>