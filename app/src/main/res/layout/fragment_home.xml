<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo5"
    tools:context=".fragment_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="690dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="6dp">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="228dp"
                    app:iss_auto_cycle="true"
                    app:iss_delay="0"
                    app:iss_period="2500" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:id="@+id/imagebutton"
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/puppy"></ImageButton>

                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Mascotas"
                        android:textColor="@color/white"
                        android:background="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginTop="190dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/makeup" >

                    </ImageButton>

                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Maquillaje"
                        android:textColor="@color/white"
                        android:background="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginTop="190dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/soap" >

                    </ImageButton>

                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Aseo hogar"
                        android:textColor="@color/white"
                        android:background="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginTop="190dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hygiene" >

                    </ImageButton>

                    <TextView
                        android:layout_width="350dp"
                        android:layout_height="50dp"
                        android:alpha="0.8"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Higiene Personal"
                        android:textColor="@color/white"
                        android:background="@color/black"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginTop="190dp"/>

                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>