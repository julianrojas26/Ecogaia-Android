<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.fragment_detalle_blog">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:background="@drawable/shape_form2"
            android:layout_gravity="center"
            android:orientation="vertical">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                app:elevation="0dp">
                <Toolbar
                    android:id="@+id/tbBlogDets"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="end">
                </Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:id = "@+id/fecha_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="18 julio 2022"
                android:textColor="@color/gray"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="end">

            </TextView>

            <ImageView
                android:id = "@+id/img_usuario"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/extraterrestres"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
            </ImageView>

            <TextView
                android:id = "@+id/nombre_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nombre Usuario"
                android:textColor="@color/gray"
                android:textSize="23dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:id = "@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textColor="@color/verde_claro"
                android:textSize="23dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textAlignment="center">
            </TextView>

           <ScrollView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_gravity="center">
               <TextView
                   android:id = "@+id/descripcion_tip"
                   android:layout_marginTop="15dp"
                   android:layout_width="300dp"
                   android:layout_height="match_parent"
                   android:text="@string/usuario"
                   android:textSize="15dp"
                   android:textColor="@color/black"
                   android:textAlignment="center">
               </TextView>
           </ScrollView>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>