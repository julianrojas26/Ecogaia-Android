<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.fragment_detalle_blog">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:background="@drawable/shape_productos"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="300dp">
            </ImageView>

            <TextView
                android:id = "@+id/fecha_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="18 julio 2022"
                android:textColor="@color/gray"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp">

            </TextView>

            <ImageView
                android:id = "@+id/img_usuario"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/extraterrestres"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
            </ImageView>

            <TextView
                android:id = "@+id/nombre_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Nombre Usuario"
                android:textColor="@color/verde"
                android:textSize="23dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
            </TextView>

            <TextView
                android:id = "@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Titulo"
                android:textColor="@color/verde"
                android:textSize="23dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">
            </TextView>

            <TextView
                android:id = "@+id/descripcion_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usuario"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_gravity="center">
            </TextView>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>