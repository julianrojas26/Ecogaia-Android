<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo7"
    tools:context=".UI.fragment_gestionar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="720dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_gestionar"
                android:layout_width="match_parent"
                android:layout_height="680dp"
                android:layout_marginBottom="200dp"
                android:layout_marginTop="140dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_gestionar" />

        </ScrollView>

    </LinearLayout>

    <TextView
        android:id="@+id/nombre_gestionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:text="Inventario"
        android:textColor="@color/verde_iconos"
        android:textSize="35sp"
        android:textStyle="bold">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:gravity="center">

        <Button
            android:id="@+id/agregar_gestionar"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_form2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Agregar"
            android:textColor="@color/verde_claro"></Button>

        <Button
            android:id="@+id/actualizar_gestionar"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_form2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="Actualizar"
            android:textColor="@color/verde_claro"></Button>

        <Button
            android:id="@+id/eliminar_gestionar"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_form2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Eliminar"
            android:textColor="@color/verde_claro"></Button>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_GestionarList"
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <View
            android:id="@+id/view_gestionarList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/verde_botones" />

        <ProgressBar
            android:id="@+id/pgbar_gestionarList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/verde_claro" />

    </RelativeLayout>


</FrameLayout>