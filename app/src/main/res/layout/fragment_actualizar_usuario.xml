<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.fragment_actualizar_usuario">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/transparent">
            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="600dp"
                android:orientation="vertical"
                android:background="@drawable/shape_form">
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/shape_usuario"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="130dp">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/extraterrestres">
                    </ImageView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="390dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_form3"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/person_form"></ImageView>
                        <EditText
                            android:id="@+id/actNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="text"
                            android:hint="Ingrese su Nombre"></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/email"></ImageView>
                        <EditText
                            android:id="@+id/actCorreo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Ingrese su correo"
                            android:inputType="text"></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/house"></ImageView>
                        <EditText
                            android:id="@+id/actDireccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Direccion de residencia"
                            android:inputType="text"></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/lock_form"></ImageView>
                        <EditText
                            android:id="@+id/actContra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Ingrese una ContraseÃ±a"
                            android:inputType="text"></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/phone"></ImageView>
                        <EditText
                            android:id="@+id/actTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Ingrese su Telefono"
                            android:inputType="number"></EditText>
                    </LinearLayout>


                </LinearLayout>
                <Button
                    android:id="@+id/actualizarUser"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_form"
                    android:text="Actualizar"
                    android:textColor="@color/verde_claro"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>