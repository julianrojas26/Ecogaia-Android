<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_20"
    android:layout_marginEnd="@dimen/margin_20"
    android:layout_marginTop="@dimen/margin_20">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imagen_de_fonfo">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="600dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_formulario"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:src="@drawable/extraterrestres">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="400dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_fondoformulario"
                android:orientation="vertical">

                <Button
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"
                    android:id="@+id/btnFavoritos"
                    android:background="@drawable/shape_botones"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Favoritos"
                    android:textColor="@color/white"
                    android:onClick="Favoritos"
                    >

                </Button>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/person"></ImageView>

                        <TextView
                            android:id="@+id/usu_nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Usuario"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/verde" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/email"></ImageView>

                        <TextView
                            android:id="@+id/usu_correo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Correo"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/verde" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/home"></ImageView>

                        <TextView
                            android:id="@+id/usu_direccion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Direccion"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/verde" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/lock"></ImageView>

                        <TextView
                            android:id="@+id/usu_contraseña"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Contraseña"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/verde" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/phone"></ImageView>

                        <TextView
                            android:id="@+id/usu_telefono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Telofono"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/verde" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_boton"
                        android:gravity="center"
                        android:text="Actualizar"
                        android:textColor="@color/black"></TextView>

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_boton"
                        android:gravity="center"
                        android:text="Cerrar Sesion"
                        android:textColor="@color/black"></TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>