<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.fragment_perfil">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/transparent"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="630dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="top|center"
            android:background="@drawable/shape_form"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/highico">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:src="@drawable/extraterrestres">

                </ImageView>

            </LinearLayout>

            <Button
                android:id="@+id/btnFavoritos"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                android:background="@drawable/shape_form"
                android:gravity="center"
                android:onClick="favoritos"
                android:padding="10dp"
                android:text="Favoritos"
                android:textColor="@color/verde_claro">

            </Button>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_fondoformulario"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/person_form"></ImageView>

                        <TextView
                            android:id="@+id/usu_nombre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Usuario"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/beige" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/email"></ImageView>

                        <TextView
                            android:id="@+id/usu_correo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Correo"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/beige" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/house"></ImageView>

                        <TextView
                            android:id="@+id/usu_direccion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Direccion"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/beige" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/lock"></ImageView>

                        <TextView
                            android:id="@+id/usu_contrasenia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="ContraseÃ±a"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/beige" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/phone"></ImageView>

                        <TextView
                            android:id="@+id/usu_telefono"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Telofono"
                            android:textColor="@color/gris_letras"
                            android:textSize="15dp">

                        </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="260dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/beige" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_form"
                    android:gravity="center"
                    android:text="Actualizar"
                    android:textColor="@color/verde_claro" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_form"
                    android:gravity="center"
                    android:text="Cerrar Sesion"
                    android:onClick = "endSession"
                    android:textColor="@color/verde_claro"></TextView>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>