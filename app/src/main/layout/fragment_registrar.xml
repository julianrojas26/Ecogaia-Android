<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imagen_de_fonfo"
        android:elevation="15dp"
        >


        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:orientation="vertical"
            android:background="@drawable/shape_registrar"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="12dp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="550dp"
            android:orientation="vertical"
            android:background="@drawable/shape_registrar"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_ususario"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/extraterrestres">

                </ImageView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="420dp"
                android:orientation="vertical"
                android:background="@drawable/shape_registrararcontenido"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/usuario">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingrese su nombre"
                        android:textColor="@color/gris_letras"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="10dp"></TextView>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/verde" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/email">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingrese su correo"
                        android:textColor="@color/gris_letras"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"></TextView>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/verde" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/house">
                    </ImageView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direccion de residencia"
                        android:textColor="@color/gris_letras"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"></TextView>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/verde" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/lock">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contraseña"
                        android:textColor="@color/gris_letras"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"></TextView>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/verde" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/lock">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmacion de contraseña"
                        android:textColor="@color/gris_letras"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"></TextView>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/verde" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/phone">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingrese su telefono"
                        android:textColor="@color/gris_letras"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"></TextView>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.6dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/verde" />
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_registrar"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="90dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrarse"
                        android:textColor="@color/white"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="15dp"></TextView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>